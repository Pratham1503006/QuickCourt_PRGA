# Local Development Environment

# Application Configuration
NODE_ENV=development
APP_PORT=4028
APP_HOST=localhost
VITE_API_URL=http://localhost:3001/api

# Local development - using backend API
DATABASE_URL=http://localhost:3001/api

# JWT Configuration (change for production)
JWT_SECRET=quickcourt-local-development-secret-2025-minimum-32-chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=quickcourt-refresh-token-secret-2025-development

# File Upload Configuration (local)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
UPLOAD_DIR=./uploads

# API Keys (dummy values for development)
VITE_OPENAI_API_KEY=your-openai-api-key-here
VITE_GEMINI_API_KEY=your-gemini-api-key-here
VITE_ANTHROPIC_API_KEY=your-anthropic-api-key-here
VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id-here
VITE_ADSENSE_ID=your-adsense-id-here
VITE_PERPLEXITY_API_KEY=your-perplexity-api-key-here
VITE_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here

# Development flags
VITE_MOCK_MODE=true
VITE_DEBUG_MODE=true
VITE_BACKEND_API_URL=http://localhost:3001

# Email configuration for backend (development - emails will be logged only)
EMAIL_USER=development@quickcourt.local
EMAIL_PASS=development-mode
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587